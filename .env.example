# ============================================================================
# APPLICATION MODE
# ============================================================================
APP_ENV=development  # development, staging, production
DEBUG=true
DEMO_MODE=false  # Enable/disable demo user access

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=data/governance_assessments.db
DATABASE_TYPE=sqlite  # sqlite, postgresql, mysql
# PostgreSQL Example:
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_governance
# DATABASE_POOL_SIZE=20

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HISTORY_COUNT=5  # Prevent reuse of last N passwords

# Account Lockout Policy
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30

# Session Configuration
SESSION_TIMEOUT_MINUTES=120  # 2 hours
SESSION_TIMEOUT_ABSOLUTE_MINUTES=480  # 8 hours (absolute timeout regardless of activity)
MAX_CONCURRENT_SESSIONS=3

# ============================================================================
# ENCRYPTION CONFIGURATION
# ============================================================================
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=your-encryption-key-change-this-in-production  # Use 32-char base64 string
ENCRYPT_PII_FIELDS=true  # Encrypt email, full_name, organization

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================
STREAMLIT_PORT=8501
STREAMLIT_ADDRESS=0.0.0.0  # 127.0.0.1 for local only, 0.0.0.0 for network access
STREAMLIT_HEADLESS=true
STREAMLIT_LOGGER_LEVEL=info

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=10
LOG_FORMAT=json  # json or text
AUDIT_LOG_ENABLED=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
METRICS_COLLECTION_ENABLED=true
APM_ENABLED=false  # Application Performance Monitoring

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100  # Requests per minute per IP
AUTH_RATE_LIMIT_PER_MINUTE=5  # Stricter limit for auth endpoints
RATE_LIMIT_BACKEND=memory  # memory or redis

# ============================================================================
# EMAIL CONFIGURATION (for future notifications)
# ============================================================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@aigovernancepro.com

# ============================================================================
# EXTERNAL INTEGRATIONS
# ============================================================================
# Virus scanning (ClamAV)
VIRUS_SCAN_ENABLED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Slack integration for alerts
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry for error tracking
SENTRY_ENABLED=false
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# COMPLIANCE & LEGAL
# ============================================================================
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # ~7 years for compliance
REQUIRE_CONSENT=true
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24  # Daily backup
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3://your-bucket/backups  # or /local/backup/path

# ============================================================================
# AWS CONFIGURATION (if using cloud storage)
# ============================================================================
AWS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_KMS_KEY_ID=arn:aws:kms:region:account:key/id  # For S3 encryption

# ============================================================================
# KUBERNETES/CONTAINER CONFIGURATION
# ============================================================================
ENVIRONMENT_NAME=dev  # dev, staging, prod
REPLICA_COUNT=1
RESOURCE_LIMIT_MEMORY=512Mi
RESOURCE_REQUEST_MEMORY=256Mi
